<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bitcamp.web.mapper.SupplierMapper">

    <insert id="insertSupplier" parameterType="com.bitcamp.web.domain.SupplierDTO">
        insert into suppliers(supplier_id, supplier_name, contact_name, address, city, postal_code, country, phone) 
        values(#{supplierId}, #{supplierName}, #{contactName}, #{address}, #{city}, #{postalCode}, #{country}, #{phone});
    </insert>

    <select id="selectSuppliers" parameterType="com.bitcamp.web.domain.SupplierDTO"
     resultType="com.bitcamp.web.domain.SupplierDTO">
        select * from suppliers
    </select>

    <select id="selectSuppliersByOption" parameterType="com.bitcamp.web.domain.SupplierDTO"
     resultType="com.bitcamp.web.domain.SupplierDTO">
        select * from suppliers where supplier_name = #{supplierName}
    </select>

    <select id="selectSupplierBySupplierId" parameterType="string"
     resultType="com.bitcamp.web.domain.SupplierDTO">
        select * from suppliers where supplier_id = #{value}
    </select>

    <update id="updateSupplier" parameterType="com.bitcamp.web.domain.SupplierDTO">
        update suppliers set
            supplier_name = #{supplierName},
            contact_name = #{contactName},
            address = #{address},
            city = #{city},
            postal_code = #{postalCode},
            country = #{country},
            phone = #{phone}
        where supplier_id = #{supplierId}
    </update>

    <delete id="deleteSupplier" parameterType="com.bitcamp.web.domain.SupplierDTO">
        delete from suppliers where supplier_id = #{supplierId}
    </delete>

</mapper>